package rest;

import java.io.IOException;
import java.util.List;

import javax.servlet.http.HttpServletResponse;
import javax.ws.rs.Consumes;
import javax.ws.rs.DELETE;
import javax.ws.rs.FormParam;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.*;

@Path("/rest/rutas/1")
public class PuntosResource 
{

	@Context
	UriInfo uriInfo;
	@Context
	Request request;

	PuntoService puntoService;
	
	public PuntosResource()
	{
		puntoService = new PuntoService();
	}
	
	// Recuperar todos los puntos del recorrido
	@GET
	@Produces({MediaType.APPLICATION_JSON})
	public List<Punto> getPuntos()
	{
		return puntoService.getPuntoAsList();
	}
	
	// Agregar un punto al recorrido
	@POST
	@Produces(MediaType.TEXT_HTML)
	@Consumes(MediaType.APPLICATION_FORM_URLENCODED)
	public void createPunto(@FormParam("id") long id,
			@FormParam("longitud") long latitud,
			@FormParam("latitud") long longitud,
			@Context HttpServletResponse servletResponse) throws IOException {
		
	// Eliminar un punto
	@DELETE
	
	// Eliminar todos los puntos
	@DELETE
	
}
