package restBusquedaPorPunto;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import rest.Punto;

public class PuntoService 
{
	private puntoBuscado punto;
	
	public PuntoService()
	{
		punto = puntoBuscado.instance;
	}
	
	public void createPunto(Punto p)
	{
		this.punto.getPuntos().clear();
		this.punto.getPuntos().put((long)1, p);
	}
	
	public Map<Long, Punto> getPuntos()
	{
		return this.punto.getPuntos();
	}
	
	public List<Punto> getPuntoAsList()
	{
		List<Punto> puntoList = new ArrayList<Punto>();
		puntoList.addAll(this.punto.getPuntos().values());
		return puntoList;
	}
	
	public int getPuntosCount()
	{
		return 1;
	}
	
	public void deletePunto(long id) 
	{
		this.punto.getPuntos().clear();
	}
	
	public void deleteAllPuntos() 
	{
		punto.getPuntos().clear();
	}
}
